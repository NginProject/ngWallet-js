{
  "name": "emerald-js",
  "version": "0.1.6",
  "description": "",
  "main": "lib/index.js",
  "types": "src/index.d.ts",
  "scripts": {
    "setup": "npm install && flow-typed install",
    "test": "jest",
    "test:coverage": "jest && codecov",
    "prepublish": "rimraf lib/ && npm run babel-prepublish && npm run flow-prepublish",
    "babel-prepublish": "./node_modules/.bin/babel src/ -d lib --ignore test.js",
    "flow-prepublish": "./node_modules/.bin/flow-copy-source src lib -i '**/*.test.js'",
    "lint": "eslint src",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ETCDEVTeam/emerald-js.git"
  },
  "keywords": [
    "emerald",
    "ethereum classic",
    "ethereum"
  ],
  "author": "ETCDEVTeam",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ETCDEVTeam/emerald-js/issues"
  },
  "homepage": "https://github.com/ETCDEVTeam/emerald-js#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.54.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.1.5",
    "jest": "^20.0.4",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "bignumber.js": "^4.0.4",
    "decompress-zip": "^0.3.0",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.4",
    "ethereumjs-util": "^5.1.5",
    "ethereumjs-wallet": "^0.6.0",
    "follow-redirects": "^1.2.6",
    "isomorphic-fetch": "^2.2.1",
    "kbpgp": "^2.0.76",
    "mz": "^2.7.0"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "collectCoverage": true
  }
}
